@{
    Layout = "_Layout";
}

<div class="container" style="max-width:480px; margin-top:3rem;">
    <div class="card card-modern p-4">
        <h3 class="mb-3">Registrarse</h3>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-danger mb-3">@Html.ValidationSummary()</div>
        }

        <form method="post" asp-controller="Account" asp-action="Register">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <input name="username" class="form-control" required minlength="3" />
            </div>

            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input name="password" type="password" class="form-control" required minlength="6" />
            </div>

            <div class="mb-3">
                <label class="form-label">Confirmar contraseña</label>
                <input name="confirmPassword" type="password" class="form-control" required minlength="6" />
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <button class="btn btn-primary-modern btn-modern" type="submit">Registrarse</button>
                <a class="btn btn-link" asp-controller="Account" asp-action="Login">Ya tengo cuenta</a>
            </div>
        </form>
    </div>
</div>
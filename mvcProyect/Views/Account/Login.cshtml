@{
    Layout = "_Layout";
    var returnUrl = ViewData["ReturnUrl"] as string;
}
<div class="container" style="max-width:480px; margin-top:3rem;">
    <div class="card card-modern p-4">
        <h3 class="mb-3">Iniciar sesión</h3>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-danger">@Html.ValidationSummary()</div>
        }

        <form method="post" asp-controller="Account" asp-action="Login">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@returnUrl" />
            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <input name="username" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input name="password" type="password" class="form-control" />
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <button class="btn btn-primary-modern btn-modern" type="submit">Entrar</button>
                <a class="btn btn-outline-light" asp-controller="Account" asp-action="Register">Registrarse</a>
            </div>
            <div class="mt-3">
                <small class="text-muted">¿Olvidaste tu contraseña? <a asp-controller="Account" asp-action="ForgotPassword">Recupérala</a></small>
            </div>
        </form>
    </div>
</div>
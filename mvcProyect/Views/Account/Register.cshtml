@{
    Layout = "_Layout";
}

<div class="container" style="max-width:480px; margin-top:3rem;">
    <div class="card card-modern p-4">
        <h3 class="mb-3">Registro de Usuario</h3>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-danger">@Html.ValidationSummary()</div>
        }

        <form method="post" asp-controller="Account" asp-action="Register">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Nombre de usuario</label>
                <input name="Username" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Correo electrónico</label>
                <input name="Email" type="email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input name="Password" type="password" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Confirmar contraseña</label>
                <input name="ConfirmPassword" type="password" class="form-control" required />
            </div>

            <button class="btn btn-primary-modern btn-modern w-100" type="submit">Registrarse</button>

            <div class="mt-3 text-center">
                <small>
                    ¿Ya tienes una cuenta?
                    <a asp-controller="Account" asp-action="Login">Inicia sesión</a>
                </small>
            </div>
        </form>
    </div>
</div>
